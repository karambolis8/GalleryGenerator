<Window x:Class="GalleryGenerator.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalleryGenerator"
        xmlns:p="clr-namespace:GalleryGenerator.Resources.Translations"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Title="{x:Static p:Translations.Settings}" Height="240" Width="280">

    <DockPanel LastChildFill="False">
        
        <Grid DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="{x:Static p:Translations.MediumImgWidth}" />
            <Label Grid.Row="1" Grid.Column="0" Content="{x:Static p:Translations.MediumImgHeight}" />
            <Label Grid.Row="2" Grid.Column="0" Content="{x:Static p:Translations.ThumbImgWidth}" />
            <Label Grid.Row="3" Grid.Column="0" Content="{x:Static p:Translations.ThumbImgHeight}" />
            <Label Grid.Row="4" Grid.Column="0" Content="{x:Static p:Translations.PreserveAspectRatio}" />
            <Label Grid.Row="5" Grid.Column="0" Content="{x:Static p:Translations.CopyOriginalFiles}" />

            <TextBox Grid.Row="0" Grid.Column="1" Margin="3" />
            <TextBox Grid.Row="1" Grid.Column="1" Margin="3" />
            <TextBox Grid.Row="2" Grid.Column="1" Margin="3" />
            <TextBox Grid.Row="3" Grid.Column="1" Margin="3" />
            <TextBox Grid.Row="4" Grid.Column="1" Margin="3" />
            <TextBox Grid.Row="5" Grid.Column="1" Margin="3" />
        </Grid>

        <DockPanel Dock="Bottom" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
            <Button x:Name="ResetButton"  DockPanel.Dock="Left" Content="{x:Static p:Translations.Reset}" HorizontalAlignment="Left" MinWidth="50" Margin="3" Click="ResetButton_Click" />
            <Button x:Name="SaveButton"  DockPanel.Dock="Right" Content="{x:Static p:Translations.Save}" HorizontalAlignment="Right" MinWidth="50" Margin="3" Click="SaveButton_OnClick"/>
            <Button x:Name="CancelButton"  DockPanel.Dock="Right" Content="{x:Static p:Translations.Cancel}" HorizontalAlignment="Right" MinWidth="50" Margin="3" Click="CancelButton_OnClick"/>
        </DockPanel>
    </DockPanel>
</Window>
