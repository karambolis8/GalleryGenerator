<Window x:Class="GalleryGenerator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Gallery Generator" Height="300" Width="300">
    <Grid>
        <StackPanel x:Name="MainStack">
            <StackPanel x:Name="GalleryNameStack" Orientation="Horizontal">
                <TextBlock x:Name="GalleryNameLabel"  Text="Gallery Name" />
                <TextBox x:Name="GalleryNameTextBox" HorizontalAlignment="Left" Width="100" />
            </StackPanel>
            
            <StackPanel x:Name="InputDirStack" Orientation="Horizontal">
                <TextBlock x:Name="InputDirLabel" Text="Input directory" />
                <TextBox x:Name="InputDirTextBox" HorizontalAlignment="Left" Width="100" />
                <Button x:Name="BrowseInputButton" Content="Browse" HorizontalAlignment="Right" Width="75" Click="browseInputButton_OnClick"/>
            </StackPanel>

            <StackPanel x:Name="OutputDirStack" Orientation="Horizontal">
                <TextBlock x:Name="OutputDirLabel" Text="Output directory" />
                <TextBox x:Name="OutputDirTextBox" HorizontalAlignment="Left" Width="100" />
                <Button x:Name="BrowseOutputButton" Content="Browse" HorizontalAlignment="Right" Width="75"/>
            </StackPanel>
            
            <StackPanel x:Name="WorkerStackPanel" Orientation="Horizontal">
                <ProgressBar x:Name="WorkerProgressBar" Width="250"/>
                <Button x:Name="RunButton" Content="Run" HorizontalAlignment="Right" Click="RunButton_OnClick" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
