    <add key="ico-xlsx" value="xlsx.png"/>
    <add key="ico-ods" value="xls.png"/>
    <add key="ico-zip" value="zip.png"/>
    <add key="ico-7z" value="zip.png"/>

    <!-- keys below are to move to user app settings -->
    <add key="imageExtensions" value=".jpg|.jpeg|.bmp|.png|.tiff|.tif|.gif"/>
    <add key="fileExtensions" value=".pdf|.html|.htm|.txt|.rtf|.odt|.ods|.doc|.docx|.xls|.xlsx|.avi|.dwg|.mov|.mp3|.mp4|.mpeg|.rar|.rtf|.ttf|.txt|.wav|.wmv|.zip|.7z"/>

  </appSettings>
  
  <startup>
    <supportedRuntime version="v2.0.50727"/>
  </startup>
  
  <userSettings>
    <GalleryGenerator.Properties.Settings>
      <setting name="MediumImgWidth" serializeAs="String">
        <value>540</value>
